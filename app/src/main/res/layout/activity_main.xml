<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="自定义控件学习"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_Title"/>
    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:id="@+id/bu_AdDemo"
        android:text="Adv"

        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bu_YK"
        android:text="YouKu"

        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bu_Spinner"
        android:text="Spinner"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bu_SlideButton"
        android:text="SlideBt"

        />
    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bu_SlideMenu"
        android:text="SlideMenu"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/bu_SlideDelete"
        android:text="SlideDelete"

        />


</LinearLayout>